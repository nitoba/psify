  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "pnpm db:migrate && nest start -b swc",
    "dev": "pnpm db:migrate && nest start -b swc -w",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --env-file=.env dist/infra/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "NODE_ENV=test vitest run --config ./vitest.config.e2e.ts",
    "test:e2e:watch": "NODE_ENV=test vitest --config ./vitest.config.e2e.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx ./src/infra/database/drizzle/migrate.ts",
    "db:studio": "drizzle-kit studio --port 3001",
    "listen-webhooks": "stripe listen --forward-to localhost:3333/orders/webhooks"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
