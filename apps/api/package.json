    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.4",
    "fastify": "^4.26.1",
    "mongoose": "^8.2.1",
    "nodemailer": "^6.9.11",
    "passport-jwt": "^4.0.1",
    "postgres": "^3.4.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
